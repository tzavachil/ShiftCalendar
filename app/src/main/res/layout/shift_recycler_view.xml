<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/rounded_gray_view"
        android:padding="5dp"
        android:layout_marginVertical="3dp"
        android:layout_marginStart="5dp">

        <View
            android:id="@+id/shiftColorView"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"/>

        <TextView
            android:id="@+id/shiftNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shift 1"
            android:textSize="17dp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingVertical="2dp"
            android:paddingEnd="50dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <TextView
        android:id="@+id/countTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="5"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/countTextView"
        app:layout_constraintEnd_toStartOf="@id/extraTimeTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="40h 0m"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/extraTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="2h 30m"
        android:textSize="17dp"
        android:textStyle="italic"
        android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>