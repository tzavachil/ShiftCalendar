<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayDetailsFragment"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="10dp">

        <View
            android:id="@+id/slide_line"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:background="@drawable/slide_line"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Shift Name"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/shiftNameEditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="35dp"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Background Color"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp">

            <View
                android:id="@+id/backgroundColor"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle"
                android:layout_marginStart="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="#"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/backgroundColorId"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginEnd="35dp"
                android:digits="0123456789ABCDEF"
                android:inputType="textCapCharacters"
                android:maxLength="6"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shiftTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_gray_view"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:layout_marginBottom="5dp"
                        android:textSize="16dp">
                    </TextView>
                    <TextView
                        android:id="@+id/startShiftTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00"
                        android:textSize="16dp"
                        android:clickable="true">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End"
                        android:layout_marginBottom="5dp"
                        android:textSize="16dp">
                    </TextView>
                    <TextView
                        android:id="@+id/endShiftTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:00"
                        android:textSize="16dp"
                        android:clickable="true">
                    </TextView>
                </LinearLayout>

                <View
                    android:id="@+id/shiftTimeLine"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/slide_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shift Time"
                        android:layout_marginBottom="5dp"
                        android:textSize="16dp">
                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/shiftTimeHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="0 h"
                            android:textSize="16dp">
                        </TextView>
                        <TextView
                            android:id="@+id/shiftTimeMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="0 m"
                            android:textSize="16dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/incomeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="35dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_gray_view"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Incomes"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/incomePerHour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/rounded_white_view"
                        android:text=""
                        android:textSize="16dp"
                        android:inputType="numberDecimal">
                    </EditText>

                    <EditText
                        android:id="@+id/incomePerExtraHour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/rounded_white_view"
                        android:text=""
                        android:textSize="16dp"
                        android:inputType="numberDecimal">
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="5dp"
                        android:gravity="start"
                        android:text="€ per hour"
                        android:textSize="16dp">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:paddingStart="5dp"
                        android:paddingEnd="10dp"
                        android:text="€ per extra hour"
                        android:textSize="16dp">
                    </TextView>

                </LinearLayout>

                <View
                    android:id="@+id/incomeLine"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/slide_line"
                    android:layout_marginEnd="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/incomePerHourTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32 €"
                        android:textSize="16dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/saveChangesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:background="@drawable/save_button"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>